# ===== إعدادات Telegram API =====
# Telegram Bot API Settings

# معرف التطبيق (API ID)
API_ID=your_api_id_here

# مفتاح التطبيق (API Hash)
API_HASH=your_api_hash_here

# رمز البوت (Bot Token)
BOT_TOKEN=your_bot_token_here

# ===== إعدادات قاعدة البيانات =====
# Database Settings

# رابط قاعدة البيانات
DATABASE_URL=sqlite:///telegram_bot.db

# أو استخدام PostgreSQL
# DATABASE_URL=postgresql://user:password@localhost:5432/telegram_bot

# ===== إعدادات البوت =====
# Bot Settings

# وضع التطوير
DEBUG=false

# مستوى السجلات
LOG_LEVEL=INFO

# مفتاح التشفير
SECRET_KEY=your_secret_key_here

# ===== إعدادات الذاكرة المؤقتة =====
# Cache Settings

# حجم الذاكرة المؤقتة الأقصى
MAX_CACHE_SIZE=50

# وقت انتهاء صلاحية الذاكرة المؤقتة (بالثواني)
CACHE_EXPIRY=3600

# ===== إعدادات معالجة الوسائط =====
# Media Processing Settings

# جودة الفيديو (18-28، 23 مثالي)
VIDEO_QUALITY_CRF=23

# معدل بت الصوت (بالكيلوبت)
AUDIO_BITRATE=128

# ===== إعدادات الأمان =====
# Security Settings

# قائمة المشرفين المسموح لهم
ALLOWED_ADMINS=@admin1,@admin2

# الكلمات المحظورة
BLOCKED_WORDS=كلمة1,كلمة2

# ===== إعدادات الأداء =====
# Performance Settings

# عدد العمليات المتزامنة
MAX_CONCURRENT_PROCESSES=5

# مهلة معالجة الوسائط (بالثواني)
MEDIA_PROCESSING_TIMEOUT=300

# ===== إعدادات السجلات =====
# Logging Settings

# مسار ملف السجلات
LOG_FILE=logs/bot.log

# حجم ملف السجلات الأقصى (بالميجابايت)
MAX_LOG_SIZE=100

# عدد ملفات السجلات الاحتياطية
LOG_BACKUP_COUNT=5
